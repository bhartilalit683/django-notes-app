<configuration>
  <system.webServer>
    <handlers>
      <add name="Python FastCGI" path="*" verb="*" modules="FastCgiModule"
           scriptProcessor="C:\Python312\python.exe|C:\Python312\Lib\site-packages\wfastcgi.py"
           resourceType="Unspecified" requireAccess="Script" />
    </handlers>

    <fastCgi>
      <application fullPath="C:\Python312\python.exe" arguments="C:\Python312\Lib\site-packages\wfastcgi.py">
        <environmentVariables>
          <environmentVariable name="DJANGO_SETTINGS_MODULE" value="myapp.settings" />
          <environmentVariable name="WSGI_HANDLER" value="myapp.wsgi.application" />
          <environmentVariable name="PYTHONPATH" value="C:\inetpub\wwwroot\myapp" />
        </environmentVariables>
      </application>
    </fastCgi>

    <defaultDocument>
      <files>
        <add value="index.py" />
      </files>
    </defaultDocument>
    <httpErrors errorMode="Detailed" />
  </system.webServer>
</configuration>
