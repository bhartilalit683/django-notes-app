<configuration>
  <system.webServer>
    <!-- Enable FastCGI Module -->
    <handlers>
      <add name="Python FastCGI" path="*" verb="*" modules="FastCgiModule" 
           scriptProcessor="C:\Python312\python.exe|C:\Python312\Lib\site-packages\wfastcgi.py" 
           resourceType="Unspecified" requireAccess="Script" />
    </handlers>

    <!-- FastCGI Configuration for Python Application -->
    <fastCgi>
      <application fullPath="C:\Python312\python.exe" arguments="C:\inetpub\wwwroot\myapp\wfastcgi.py">
        <environmentVariables>
          <!-- Set Django settings module -->
          <environmentVariable name="DJANGO_SETTINGS_MODULE" value="myapp.settings" />
          <!-- WSGI handler for Django -->
          <environmentVariable name="WSGI_HANDLER" value="myapp.wsgi.application" />
          <!-- Set Python path to your application -->
          <environmentVariable name="PYTHONPATH" value="C:\inetpub\wwwroot\myapp" />
          <!-- Ensure proper working directory is set -->
          <environmentVariable name="DJANGO_SETTINGS_MODULE" value="myapp.settings" />
        </environmentVariables>
      </application>
    </fastCgi>

    <!-- Rewrite Rule for Static and Media Files -->
    <rewrite>
      <rules>
        <!-- Serve static files directly -->
        <rule name="Static Files" stopProcessing="true">
          <match url="^static/(.*)$" />
          <action type="Rewrite" url="C:\inetpub\wwwroot\myapp\static\{R:1}" />
        </rule>
        <!-- Serve media files directly -->
        <rule name="Media Files" stopProcessing="true">
          <match url="^media/(.*)$" />
          <action type="Rewrite" url="C:\inetpub\wwwroot\myapp\media\{R:1}" />
        </rule>
      </rules>
    </rewrite>

    <!-- Specify Default Document -->
    <defaultDocument>
      <files>
        <add value="index.py" />
      </files>
    </defaultDocument>

    <!-- Detailed Error Pages for Debugging -->
    <httpErrors errorMode="Detailed" />

    <!-- Disable Directory Browsing -->
    <directoryBrowse enabled="false" />
  </system.webServer>
</configuration>
